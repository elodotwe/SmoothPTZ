<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:icon="@drawable/ic_cloud"
        android:key="network_address"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:summary="@string/settings_camera_network_address_unset"
        android:title="@string/settings_camera_network_address" />
    <EditTextPreference
        android:defaultValue="Default value"
        android:key="name"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:summary="@string/settings_camera_name_unset"
        android:title="@string/settings_camera_name" />
</PreferenceScreen>